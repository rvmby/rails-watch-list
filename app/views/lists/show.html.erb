<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4));">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container">
  <div class="row mt-5">
    <% @list.movies.each do |movie| %>
      <div class="col-4">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= movie.image_url %>')">
          <%= movie.name %>
          <%= link_to "+", movie_path(movie), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "card-remove-link" %>
          <div class="card-tags">
          <% list.bookmarks.each do |bookmark| %>
            <span><%= bookmark.id %></span>
          <% end %>
          <%= link_to "+", new_movie_movie_bookmark_path(movie) %>
        </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row my-5 justify-content-center">
    <div class="col-4">
      <h4>Add a list</h4>
      <%= simple_form_for [@list, @movie] do |f| %>x
        <%= f.input :name, placeholder: "Movie name" %>
        <%= f.input :image_url, placeholder: "https://some_nice_image_found_on_google.jpg" %>
        <%= f.submit "Add", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
